{
    "version": "2.0.0",
    "tasks": [
        {
            "label": "Build Yak Package",
            "type": "shell",
            "command": "yak",
            "args": [
                "build",
                "--platform",
                "win",
            ],
            "options": {
                "cwd": "dist",
            },
            "dependsOn": "Build",
            "group": {
                "kind": "build",
                "isDefault": true
            },
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "silent",
                "clear": true
            },
        },
        {
            "label": "Build",
            "type": "shell",
            "command": "dotnet",
            "args": [
                "build",
                "/p:Configuration=\"${input:configuration}\"",
                "${workspaceFolder}/BIM360FileLockerForRhino.sln"
            ],
            "group": "build",
            "problemMatcher": "$msCompile",
            "presentation": {
                "reveal": "silent",
                "clear": true
            }
        }
    ],
    "inputs": [
        {
            "type": "pickString",
            "id": "configuration",
            "description": "Build Configuration",
            "options": [
                "Debug",
                "Release",
            ],
            "default": "Release"
        }
    ]
}